@{
    ViewData["Title"] = "Mailing List - Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims
@model IEnumerable<SonOfCod.Models.MailingList>

@if (User.Identity.IsAuthenticated)
{
    @foreach (var mailingList in Model)
    {
        <div class-="container">
            <div class="col-md-4 news-letter-title">
                @Html.ActionLink(mailingList.Email, "Details", "MialingList", new { id = mailingList.MailingListId })
            </div>
        </div>
    }
}
else
{
    <h3>Must be logged in as Admin to edit mailing list</h3>
}